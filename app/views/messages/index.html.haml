.header
  %h4.message

.left-wrapper
  .left-upper
    %p.user-name 
      ユーザー名
    %ul.left-menu
      %li.left-menu__accoount-change
      %label.label
        = fa_icon'edit'
        %span<>
      %li.left-menu__make-group
      %label.label
        = fa_icon'cog'
        %span<>

  .left-lower
    %ul.left-group
      %li.left-group__name
        チーム名
      %li.left-group__comment
        最新コメント

.right-wrapper
  .right-upper
    %ul.group-container
      %li.group-container__current-group
        グループ名
        %span<>
      %li.group-container__edit-button
        =link_to 'Edit', root_path, class: 'edit-button'
        %span<>
    %p.member-name
      Member : インスタンス変数
  .right-lower
    %ul.right-group
      %li.right-group__current-user
        ユーザー名
        %span<>
      %li.right-group__date-and-time
        日時
        %span<>
    %p.group-message
    
      コメント
  .message-form
    = form_for([@group, @message], html: {class: "message-form__container"}) do |f|
      .message-form__container__input-box
        = f.text_area :content, placeholder:"type a style", :class=> "message-form__container__input-box--text"
      .message-form__container__icon-position
        %label.label
          = fa_icon'image', onClick: "$('.message-form__container__icon-position--file').click()"
          = f.file_field :image, class: "message-form__container__icon-position--file"
      = f.submit "send", class: "message-form__container__send-button"

