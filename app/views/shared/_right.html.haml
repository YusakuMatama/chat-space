.right-wrapper
  .right-upper
    %ul.group-container
      %li.group-container__current-group
        グループ名
        %span<>
      %li.group-container__edit-button
        =link_to 'Edit', edit_group_path(current_user.groups.ids), class: 'edit-button'
        %span<>
    %p.member-name
      Member : インスタンス変数
  .right-lower
    %ul.right-group
      %li.right-group__current-user
        = current_user.name
        %span<>
      %li.right-group__date-and-time
        日時
        %span<>
    %p.group-message
      コメント
  .message-form
    = form_for(@message, html: {class: "message-form__container"}) do |f|
      .message-form__container__input-box
        = f.text_area :text, placeholder:"type a style", class: "message-form__container__input-box--text"
      .message-form__container__icon-position
        %label.label
          = fa_icon'image'
          = f.file_field :upload_file, class: "message-form__container__icon-position--file"
      = f.submit "send", class: "message-form__container__send-button"