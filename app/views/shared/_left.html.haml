.left-wrapper
  .left-upper
    %p.user-name 
      = current_user.name
    %ul.left-menu
      %li.left-menu__accoount-change
      %label.label
        = link_to edit_user_path(current_user) do
          = fa_icon'edit'
        %span<>
      %li.left-menu__make-group
      %label.label
        = link_to new_group_path do
          = fa_icon'cog'
        %span<>

  .left-lower
    %ul.left-group
      -current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          %li.left-group__name
            =group.name
          %li.left-group__comment
            最新コメント

